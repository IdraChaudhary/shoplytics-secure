# Prisma Database Configuration
# Copy this to .env or .env.local and update with your actual database credentials

# PostgreSQL Database URL for Prisma
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://shoplytics_user:your_password_here@localhost:5432/shoplytics_secure?schema=public"

# Alternative format for PgBouncer/connection pooling
# DATABASE_URL="postgresql://shoplytics_user:your_password_here@localhost:6432/shoplytics_secure?schema=public&pgbouncer=true"

# Shadow database URL for migrations (optional, used for migration diffing)
SHADOW_DATABASE_URL="postgresql://shoplytics_user:your_password_here@localhost:5432/shoplytics_secure_shadow?schema=public"

# Prisma Configuration
PRISMA_QUERY_ENGINE_LIBRARY="./node_modules/.prisma/client/libquery_engine-windows.dll.node"

# Database connection pool settings (optional)
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20

# Migration and development settings
PRISMA_GENERATE_DATAPROXY="false"
PRISMA_CLI_QUERY_ENGINE_TYPE="binary"

# Multi-tenant settings
DEFAULT_SCHEMA="public"
TENANT_ISOLATION_LEVEL="row"

# Security settings for production
SECURE_CONNECTION="true"
SSL_MODE="require"
