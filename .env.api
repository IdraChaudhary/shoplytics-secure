# API Server Configuration
API_PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# CORS Configuration  
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Database Configuration (reuse from main .env)
DATABASE_URL=postgresql://username:password@localhost:5432/shoplytics
DEMO_ENCRYPTION_KEY=demo-key-for-development-only-change-in-production

# Security Configuration
API_SECRET_KEY=your-super-secret-api-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration
WEBHOOK_RATE_LIMIT_WINDOW_MS=300000
WEBHOOK_RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Shopify Configuration (for webhook verification)
SHOPIFY_WEBHOOK_SECRET=your-shopify-webhook-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@shoplytics-secure.com
